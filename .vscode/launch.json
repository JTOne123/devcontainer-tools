    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Run init verb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/devcontainer/bin/Debug/netcoreapp3.0/devcontainer.dll",
            "args": [ "init", "default", "-n", "test"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run init -o verb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/devcontainer/bin/Debug/netcoreapp3.0/devcontainer.dll",
            "args": [ "init", "default", "-n", "test", "-o"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run ls verb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/devcontainer/bin/Debug/netcoreapp3.0/devcontainer.dll",
            "args": [ "ls" ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run activate verb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/devcontainer/bin/Debug/netcoreapp3.0/devcontainer.dll",
            "args": [ "activate", "test" ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run activate -d verb",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/devcontainer/bin/Debug/netcoreapp3.0/devcontainer.dll",
            "args": [ "activate", "test", "-d" ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}